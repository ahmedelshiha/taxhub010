/// Merge Log - Tracks party/product/taxcode merges and unmerges
model MergeLog {
  id                    String                    @id @default(cuid())
  tenantId              String
  recordType            MergeRecordType           // PARTY, PRODUCT, TAX_CODE

  // Master and duplicate records
  masterRecordId        String
  masterRecordName      String                    @db.VarChar(255)
  duplicateRecordId     String
  duplicateRecordName   String                    @db.VarChar(255)

  // Merge details
  mergeReason           String?                   @db.Text
  survivorshipRuleId    String?
  survivorshipStrategy  SurvivorshipStrategy      @default(MANUAL) // MANUAL, AUTOMATIC, RULE_BASED

  // Merge result
  mergeStatus           MergeStatus               @default(PENDING) // PENDING, COMPLETED, FAILED, ROLLED_BACK
  mergeErrors           String[]                  @default([])

  // Unmerge capability
  canUnmerge            Boolean                   @default(true)
  unmergeReason         String?                   @db.Text
  unmergedAt            DateTime?
  unmergedBy            String?

  // Audit trail
  mergedAt              DateTime                  @default(now())
  mergedBy              String
  metadata              Json?

  // Relations
  tenant                Tenant                    @relation("MergeLogs", fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, recordType])
  @@index([tenantId, mergeStatus])
  @@index([masterRecordId])
  @@index([duplicateRecordId])
  @@index([mergedAt])
  @@index([tenantId, mergedAt(sort: Desc)])
  @@map("merge_logs")
}

/// Survivorship Rule - Defines how to handle conflicts during merge
model SurvivorshipRule {
  id                    String                    @id @default(cuid())
  tenantId              String
  recordType            MergeRecordType           // PARTY, PRODUCT, TAX_CODE
  ruleName              String                    @db.VarChar(255)
  description           String?                   @db.Text

  // Rule definition
  fieldMappings         Json                      // { "fieldName": "MASTER|DUPLICATE|NEWER|OLDER|CUSTOM" }
  customLogic           String?                   @db.Text // JavaScript or expression for custom logic
  priority              Int                       @default(0)

  // Status
  isActive              Boolean                   @default(true)

  // Metadata
  createdAt             DateTime                  @default(now())
  updatedAt             DateTime                  @updatedAt
  createdBy             String?
  updatedBy             String?

  // Relations
  tenant                Tenant                    @relation("SurvivorshipRules", fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, ruleName])
  @@index([tenantId, recordType])
  @@index([tenantId, isActive])
  @@map("survivorship_rules")
}

